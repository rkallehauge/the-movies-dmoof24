<Window x:Class="The_Movies.View.ShowingOverview"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:The_Movies.View"
		mc:Ignorable="d"
		Title="ShowingOverview"
		Height="500"
		Width="800">
	<Grid>
        <ComboBox x:Name="cbCinema"
				  HorizontalAlignment="Left"
				  Margin="108,18,0,0"
				  VerticalAlignment="Top"
				  Width="118"
				  Height="26">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="   "/>
                        <TextBlock Text="{Binding CityName}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            
            
        </ComboBox>



        <DatePicker x:Name="dpShowing"
					HorizontalAlignment="Left"
					Margin="108,59,0,0"
					VerticalAlignment="Top" />
		<ListView Margin="50,106,50,178"
				  Height="200"
				  Width="700"
				  ScrollViewer.VerticalScrollBarVisibility="Auto"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto">
			<ListView.View>
				<GridView>
					<!-- Definer kolonner -->
					<GridViewColumn Header="Screening Times"
									Width="50">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>

					<GridViewColumn Header="Sal 1"
									Width="130" />
					<GridViewColumn Header="Sal 2"
									Width="130" />
					<GridViewColumn Header="Sal 3"
									Width="130" />
					<GridViewColumn Header="Sal 4"
									Width="130" />
					<GridViewColumn Header="Sal 5"
									Width="130" />
				</GridView>
			</ListView.View>
				<ListBox Grid.Column="0">
					<ListBox.ItemsSource>
						<x:Array Type="{x:Type sys:String}"
								 xmlns:sys="clr-namespace:System;assembly=mscorlib">
							<sys:String>10:00</sys:String>
							<sys:String>11:00</sys:String>
							<sys:String>12:00</sys:String>
							<sys:String>13:00</sys:String>
							<sys:String>14:00</sys:String>
							<sys:String>15:00</sys:String>
							<sys:String>16:00</sys:String>
							<sys:String>17:00</sys:String>
							<sys:String>18:00</sys:String>
							<sys:String>19:00</sys:String>
							<sys:String>20:00</sys:String>
							<sys:String>21:00</sys:String>
							<sys:String>22:00</sys:String>
						</x:Array>
					</ListBox.ItemsSource>
				</ListBox>
				<ListBox Grid.Column="1"
						 Width="130"
						 x:Name="lbScreen1"
						 ItemsSource="{Binding MoviesVM}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock>
									<TextBlock.Text>
										<MultiBinding StringFormat="{}{0}             Price: {1}">
											<Binding Path="Title" />
											<Binding Path="Duration" />
										</MultiBinding>
									</TextBlock.Text>
								</TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<ListBox Grid.Column="2"
						 Width="130"
						 x:Name="lbScreen2"
						 ItemsSource="{Binding MoviesVM}"
						 SelectedItem="{Binding SelectedProduct}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock>
									<TextBlock.Text>
										<MultiBinding StringFormat="{}{0}             Price: {1}">
											<Binding Path="Title" />
											<Binding Path="Duration" />
										</MultiBinding>
									</TextBlock.Text>
								</TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<ListBox Grid.Column="3"
						 Width="130"
						 x:Name="lbScreen3"
						 ItemsSource="{Binding MoviesVM}"
						 SelectedItem="{Binding SelectedProduct}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock>
									<TextBlock.Text>
										<MultiBinding StringFormat="{}{0}             Price: {1}">
											<Binding Path="Title" />
											<Binding Path="Duration" />
										</MultiBinding>
									</TextBlock.Text>
								</TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<ListBox Grid.Column="4"
						 Width="130"
						 x:Name="lbScreen4"
						 ItemsSource="{Binding MoviesVM}"
						 SelectedItem="{Binding SelectedProduct}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock>
									<TextBlock.Text>
										<MultiBinding StringFormat="{}{0}             Price: {1}">
											<Binding Path="Title" />
											<Binding Path="Duration" />
										</MultiBinding>
									</TextBlock.Text>
								</TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

			<ListBox Grid.Column="5"
					 Width="130"
					 x:Name="lbScreen5"
					 ItemsSource="{Binding MoviesVM}"
					 SelectedItem="{Binding SelectedProduct}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<TextBlock>
								<TextBlock.Text>
									<MultiBinding StringFormat="{}{0}             Price: {1}">
										<Binding Path="Title" />
										<Binding Path="Duration" />
									</MultiBinding>
								</TextBlock.Text>
							</TextBlock>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ListView>
		
		
		
		
		
		<Label Content="Biograf"
			   HorizontalAlignment="Left"
			   Margin="19,18,0,0"
			   VerticalAlignment="Top"
			   Width="78"
			   Background="#FFD01919" />

		<ComboBox x:Name="cbCinema_Copy"
				  HorizontalAlignment="Left"
				  Margin="106,332,0,0"
				  VerticalAlignment="Top"
				  Width="152"
				  Height="36" />
		<ComboBox x:Name="cbMovie"
				  HorizontalAlignment="Left"
				  Margin="106,391,0,0"
				  VerticalAlignment="Top"
				  Width="152"
				  Height="36" />
		<Label Content="Biograf"
			   HorizontalAlignment="Left"
			   Margin="43,339,0,0"
			   VerticalAlignment="Top"
			   Height="26"
			   Width="54" />
		<Label Content="Film titel"
			   HorizontalAlignment="Left"
			   Margin="38,395,0,0"
			   VerticalAlignment="Top"
			   Height="26"
			   Width="64" />
		<ComboBox x:Name="cbTime"
				  HorizontalAlignment="Left"
				  Margin="390,333,0,0"
				  VerticalAlignment="Top"
				  Width="127"
				  Height="32" />
		<ComboBox x:Name="cbScreen"
				  HorizontalAlignment="Left"
				  Margin="390,397,0,0"
				  VerticalAlignment="Top"
				  Width="127"
				  Height="32" />
		<Label Content="Tidspunkt"
			   HorizontalAlignment="Left"
			   Margin="319,334,0,0"
			   VerticalAlignment="Top"
			   Height="23"
			   Width="71" />
		<Label Content="Sal nummer"
			   HorizontalAlignment="Left"
			   Margin="313,398,0,0"
			   VerticalAlignment="Top"
			   Height="23"
			   Width="77" />
		<Button x:Name="btnSaveChanges"
				Content="Gem ændringer"
				HorizontalAlignment="Left"
				Margin="613,341,0,0"
				VerticalAlignment="Top"
				Height="34"
				Width="93"
				Background="#FF3DD83F" />
		<Button x:Name="btnRemoveShowing"
				Content="Slet forestilling"
				HorizontalAlignment="Left"
				Margin="613,387,0,0"
				VerticalAlignment="Top"
				Height="34"
				Width="93"
				Background="#FFF92727" />
	</Grid>
</Window>
