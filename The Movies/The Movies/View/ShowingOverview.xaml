<Window x:Class="The_Movies.View.ShowingOverview"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:The_Movies.View"
		mc:Ignorable="d"
		Title="ShowingOverview"
		Height="450"
		Width="800">
	<Grid>
        <ComboBox x:Name="cbCinema"
				  HorizontalAlignment="Left"
				  Margin="108,18,0,0"
				  VerticalAlignment="Top"
				  Width="118"
				  Height="26">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="   "/>
                        <TextBlock Text="{Binding CityName}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            
            
        </ComboBox>



        <DatePicker x:Name="dpShowing"
					HorizontalAlignment="Left"
					Margin="108,59,0,0"
					VerticalAlignment="Top" 
                    
                    />
		<ListBox x:Name="lbScreen1"
				 ItemsSource="{Binding MoviesVM}"
				 Margin="64,134,619,118"
				 >
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock>
							<TextBlock.Text>
								<MultiBinding StringFormat="{}{0}             Price: {1}">
									<Binding Path="Title" />
									<Binding Path="Duration" />
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<ListBox x:Name="lbScreen2"
				 ItemsSource="{Binding MoviesVM}"
